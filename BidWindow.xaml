<Window x:Class="PracticaBd.BidWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaBd"
        mc:Ignorable="d"
        Title="Окно заявок" Height="450" Width="860" WindowStartupLocation="CenterScreen" Background="#FF2E2E2E">
    <Grid>
        <Image Source="C:\Users\3loqic\source\repos\PracticaBd\PracticaBd\rm.jpg" Width="1000" Height="1500"/>
        <DataGrid x:Name="DataGrid" AutoGenerateColumns="True" Margin="10,10,10,100" />
        <ComboBox x:Name="clientComboBox" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Width="200" Height="30" />
        <Label Content="Код клиента:" Margin="10,340,0,0" />
        <ComboBox x:Name="employeeComboBox" HorizontalAlignment="Left" Margin="220,310,0,0" VerticalAlignment="Top" Width="200" Height="30" />
        <Label Content="Код работника:" Margin="220,340,0,0" />
        <TextBox x:Name="datebidComboBox" HorizontalAlignment="Left" Margin="430,310,0,0" VerticalAlignment="Top" Width="200" Height="30" />
        <Label Content="Дата заявки:" Margin="430,340,0,0" />
        <TextBox x:Name="descriptionproblemComboBox" HorizontalAlignment="Left" Margin="640,310,0,0" VerticalAlignment="Top" Width="200" Height="30" />
        <Label Content="Описание проблемы:" Margin="640,340,0,0" />
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="510,370,0,0" VerticalAlignment="Top" Click="Button_Click" Width="100" Height="30" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="620,370,0,0" VerticalAlignment="Top" Click="UpdateButton_Click" Width="100" Height="30" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="730,370,0,0" VerticalAlignment="Top" Click="DeleteButton_Click" Width="100" Height="30" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
    </Grid>
</Window>

<Window x:Class="PracticaBd.ClglavnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaBd"
        mc:Ignorable="d"
        Title="Автосервис - Главное меню" 
        Height="400" Width="600" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2E2E2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF147D32"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF147D32"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0A5A24"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid>
            <Image Source="C:\Users\3loqic\source\repos\PracticaBd\PracticaBd\rm.jpg" Stretch="UniformToFill"/>
            <Rectangle Fill="#80000000"/>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#FF2E2E2E" Padding="10">
                <Grid>
                    <TextBlock Text="АВТОСЕРВИС" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <StackPanel Grid.Row="1" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Width="300">
                <Button Content="Услуги" Click="ClientServiceButton_Click"/>
                <Button Content="Запчасти" Click="ClientSparePartButton_Click"/>
                <Button Content="Корзина" Click="CartButton_Click"/>
            </StackPanel>
            <Border Grid.Row="2" Background="#FF2E2E2E" Padding="10">
                <Button Content="Выйти из системы" 
                        HorizontalAlignment="Right"
                        Click="RetButton_Click"
                        Width="150"/>
            </Border>
        </Grid>
    </Grid>
</Window>

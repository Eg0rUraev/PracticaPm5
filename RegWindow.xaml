<Window x:Class="PracticaBd.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно регистрации" Height="320" Width="450" WindowStartupLocation="CenterScreen"
        Background="#FF2E2E2E" WindowStyle="None" AllowsTransparency="True">
    <Grid>
        <Image Source="C:\Users\3loqic\source\repos\PracticaBd\PracticaBd\rm.jpg" 
               Stretch="UniformToFill" Opacity="0.5"/>
        <DataGrid x:Name="DataGrid" Margin="10000"/>
        <Border Background="#FF3C3C3C" CornerRadius="10" Padding="20" Margin="30">
            <StackPanel>
                <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" 
                           Foreground="#FFFFFFFF" HorizontalAlignment="Center"/>

                <Label Content="Логин:" Foreground="#FFFFFFFF"/>
                <TextBox Name="loginComboBox" Width="350" Background="#FF7C9B9E"
                         Margin="0,5,0,15" Padding="5"/>

                <Label Content="Пароль:" Foreground="#FFFFFFFF"/>
                <TextBox Name="passwordComboBox" Width="350" Background="#FF7C9B9E"
                              Margin="0,5,0,15" Padding="5"/>


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Зарегистрироваться" Click="RegistrButton_Click"
                            Width="150" Margin="5,0,5,0" Foreground="White">
                        <Button.Background>
                            <ImageBrush/>
                        </Button.Background>
                    </Button>
                    <Button Content="Назад" Click="RetButton_Click"
                            Width="100" Margin="5,0,5,0" Foreground="White">
                        <Button.Background>
                            <ImageBrush/>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>

<Window x:Class="PracticaBd.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Корзина" Height="400" Width="500" WindowStartupLocation="CenterScreen" Background="#FF2E2E2E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="CartListBox" Grid.Row="0" Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Удалить" Click="RemoveButton_Click" Margin="0,0,10,0" Foreground="White">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
            <Button Content="Оформить заказ" Click="CheckoutButton_Click" Foreground="White">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
        </StackPanel>
        <TextBlock x:Name="TotalPriceTextBlock" Grid.Row="1" HorizontalAlignment="Left" 
                   VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
    </Grid>
</Window>

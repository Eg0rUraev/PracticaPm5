        <Image Source="C:\Users\3loqic\source\repos\PracticaBd\PracticaBd\rm.jpg" Width="1000" Height="1500"/>
        <DataGrid x:Name="DataGrid" AutoGenerateColumns="True" Margin="10,10,10,100" />
        <ComboBox x:Name="bidComboBox" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Width="150" Height="30" />
        <Label Content="Код заявки:" Margin="10,335,0,0" />

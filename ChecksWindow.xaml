        <Label Content="Код услуги:" Margin="170,335,0,0" />
        <ComboBox x:Name="sparepartComboBox" HorizontalAlignment="Left" Margin="330,310,0,0" VerticalAlignment="Top" Width="150" Height="30" />
        <Label Content="Код запчасти:" Margin="330,335,0,0" />
        <TextBox x:Name="quantityserviceComboBox" HorizontalAlignment="Left" Margin="490,310,0,0" VerticalAlignment="Top" Width="150" Height="30" />

<Window x:Class="PracticaBd.RazrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaBd"
        mc:Ignorable="d"
        Title="Окно автоизации администраторов" Height="320" Width="400" WindowStartupLocation="CenterScreen" Background="#FF2E2E2E" WindowStyle="None" AllowsTransparency="True">
    <Grid>
        <Image Source="C:\Users\3loqic\source\repos\PracticaBd\PracticaBd\rm.jpg" 
           Stretch="UniformToFill" Opacity="0.5"/>

        <Border Background="#FF3C3C3C" CornerRadius="10" Padding="20" Margin="30">
            <StackPanel>
                <TextBlock Text="Авторизация(адм)" FontSize="24" FontWeight="Bold" 
                       Foreground="#FFFFFFFF" HorizontalAlignment="Center"/>

                <Label Content="Логин:" Foreground="#FFFFFFFF"/>
                <TextBox Name="loginTextBox" Width="350" Background="#FF7C9B9E"
                     Margin="0,5,0,15" Padding="5"/>

                <Label Content="Пароль:" Foreground="#FFFFFFFF"/>
                <PasswordBox Name="passwordBox" Width="350" Background="#FF7C9B9E"
                          Margin="0,5,0,15" Padding="5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Войти" Click="LoginButton_Click" Width="100"
                        Margin="5,0,5,0" Foreground="White">
                        <Button.Background>
                            <ImageBrush/>
                        </Button.Background>
                    </Button>
                    <Button Content="Назад" Click="RetButton_Click"
                        Width="50" Margin="25,0,5,0" Foreground="White">
                        <Button.Background>
                            <ImageBrush/>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>

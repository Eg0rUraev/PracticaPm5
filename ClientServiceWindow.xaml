<Window x:Class="PracticaBd.ClientServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно услуг" Height="600" Width="800" WindowStartupLocation="CenterScreen" Background="#FF2E2E2E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGrid" Grid.Row="0" Margin="10" 
              IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
              SelectionMode="Single" AutoGenerateColumns="True"/>
        <GroupBox Grid.Row="1" Header="" Margin="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ListBox x:Name="CartListBox" Height="0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Button Content="Добавить в корзину" Click="AddToCartButton_Click" Foreground="White" Width="148" FontSize="14">
                        <Button.Background>
                            <ImageBrush/>
                        </Button.Background>
                    </Button>
                    <TextBlock x:Name="TotalPriceTextBlock" FontWeight="Bold" Margin="0,0,0,0"/>
                </StackPanel>
                <Button Content="Перейти к корзине" Click="ViewCartButton_Click" Foreground="White" Margin="460,12,17,28" FontSize="14">
                    <Button.Background>
                        <ImageBrush/>
                    </Button.Background>
                </Button>
            </Grid>
        </GroupBox>
    </Grid> 
</Window>

<Window x:Class="PracticaBd.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaBd"
        mc:Ignorable="d"
        Title="Окно услуг" Height="450" Width="670" WindowStartupLocation="CenterScreen" Background="#FF2E2E2E">
    <Grid>
        <Image Source="C:\Users\3loqic\source\repos\PracticaBd\PracticaBd\rm.jpg" Width="1000" Height="1500"/>
        <DataGrid x:Name="DataGrid" AutoGenerateColumns="True" Margin="10,10,10,100" />
        <ComboBox x:Name="typeComboBox" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Width="200" Height="30" />
        <Label Content="Код вида:" Margin="10,340,0,0" />
        <TextBox x:Name="nameComboBox" HorizontalAlignment="Left" Margin="220,310,0,0" VerticalAlignment="Top" Width="200" Height="30" />
        <Label Content="Название:" Margin="220,340,0,0" />
        <TextBox x:Name="priceComboBox" HorizontalAlignment="Left" Margin="430,310,0,0" VerticalAlignment="Top" Width="200" Height="30" />
        <Label Content="Цена:" Margin="430,340,0,0" />
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="310,370,0,0" VerticalAlignment="Top" Click="Button_Click" Width="100" Height="30" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="420,370,0,0" VerticalAlignment="Top" Click="UpdateButton_Click" Width="100" Height="30" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="530,370,0,0" VerticalAlignment="Top" Click="DeleteButton_Click" Width="100" Height="30" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
    </Grid>
</Window>

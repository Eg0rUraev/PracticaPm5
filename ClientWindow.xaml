        <TextBox x:Name="surnameComboBox" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Width="200" Height="30" />
        <Label Content="Фамилия:" Margin="10,340,0,0" />
        <TextBox x:Name="firstnameComboBox" HorizontalAlignment="Left" Margin="220,310,0,0" VerticalAlignment="Top" Width="200" Height="30" />
        <Label Content="Имя:" Margin="220,340,0,0" />
        <TextBox x:Name="lastnameComboBox" HorizontalAlignment="Left" Margin="430,310,0,0" VerticalAlignment="Top" Width="200" Height="30" />

        mc:Ignorable="d"
        Title="Окно клиентов" Height="450" Width="1070" WindowStartupLocation="CenterScreen" Background="#FF2E2E2E">
    <Grid>
        <Image Source="C:\Users\3loqic\source\repos\PracticaBd\PracticaBd\rm.jpg" Width="1100" Height="1500"/>

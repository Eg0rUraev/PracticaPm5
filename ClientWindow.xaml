                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="820,370,0,0" VerticalAlignment="Top" Click="UpdateButton_Click" Width="100" Height="30" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="930,370,0,0" VerticalAlignment="Top" Click="DeleteButton_Click" Width="100" Height="30" >
